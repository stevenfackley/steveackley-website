generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  CLIENT
}

enum MessageType {
  GENERAL
  PROJECT_REQUEST
}

enum Environment {
  PRODUCTION
  TEST
  DEVELOPMENT
}

model User {
  id               String    @id @default(cuid())
  email            String    @unique
  passwordHash     String
  name             String?
  companyName      String?
  contactFirstName String?
  contactLastName  String?
  role             Role      @default(CLIENT)
  logo             String?
  apps             UserApp[]
  sentMessages     Message[] @relation("SentMessages")
  receivedMessages Message[] @relation("ReceivedMessages")
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}

model ClientApp {
  id               String       @id @default(cuid())
  name             String
  productName      String?
  companyName      String?
  environment      Environment  @default(PRODUCTION)
  url              String
  description      String?
  icon             String?
  favicon          String?
  ogImage          String?
  isLive           Boolean      @default(true)
  metadataFetchedAt DateTime?
  users            UserApp[]
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
}

model UserApp {
  userId String
  appId  String
  user   User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  app    ClientApp @relation(fields: [appId], references: [id], onDelete: Cascade)

  @@id([userId, appId])
}

model Message {
  id         String      @id @default(cuid())
  fromUserId String
  toUserId   String
  subject    String
  body       String
  type       MessageType @default(GENERAL)
  read       Boolean     @default(false)
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  fromUser User @relation("SentMessages", fields: [fromUserId], references: [id], onDelete: Cascade)
  toUser   User @relation("ReceivedMessages", fields: [toUserId], references: [id], onDelete: Cascade)

  @@index([toUserId, read, createdAt(sort: Desc)])
  @@index([fromUserId, createdAt(sort: Desc)])
}

model Post {
  id         String   @id @default(cuid())
  title      String
  slug       String   @unique
  content    String
  excerpt    String?
  coverImage String?
  published  Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([published, createdAt(sort: Desc)])
}

model SiteSetting {
  key       String   @id
  value     String
  updatedAt DateTime @updatedAt
}
