generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  CLIENT
}

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  passwordHash String
  name         String?
  role         Role      @default(CLIENT)
  apps         UserApp[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model ClientApp {
  id          String    @id @default(cuid())
  name        String
  url         String
  description String?
  icon        String?
  users       UserApp[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model UserApp {
  userId String
  appId  String
  user   User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  app    ClientApp @relation(fields: [appId], references: [id], onDelete: Cascade)

  @@id([userId, appId])
}

model Post {
  id         String   @id @default(cuid())
  title      String
  slug       String   @unique
  content    String
  excerpt    String?
  coverImage String?
  published  Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([published, createdAt(sort: Desc)])
}

model SiteSetting {
  key       String   @id
  value     String
  updatedAt DateTime @updatedAt
}
